<video autoplay muted loop id="myVideo">
  <source <%=image_tag("dance.mp4")%> type="video/mp4">
  </video>

  <div class="content">
    <h1>GROOVES</h1>
    <p>Discover your new passion, bring joy into your life and light up your feet. </p>
  </div>
  <div class="container">
      <h2>Dance lessons on offer:</h2>
      <% @dance_lessons.each do |lesson| %>
       <div class="card-product">
        <%= cl_image_tag lesson.photo.key, height: 300, width: 400, crop: :fill%>
         <div class="card-product-infos">
           <h2><%= lesson.name %></h2>
           <p><%= lesson.description %></p>
           <p><%= lesson.level %></p>
           <%= link_to "Join now", dance_lesson_path(lesson), class: "btn btn-danger mt-4"%>
         </div>
       </div>
       <br>
       <br>
      <% end %>

  </div>

  <div id="map"
  style="width: 100%; height: 600px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>





